#!/bin/sh

# Utils
alias ka='killall' 
alias ls='exa --group-directories-first'
alias ll='ls -lah --icons'
alias tree='exa --tree --icons -a'
alias grep='grep --color=auto'
alias sourcez='source ~/.zshrc'
alias gt='starship toggle gcloud disabled'
alias kt='starship toggle kubernetes disabled'
alias gk='gt && kt'

# Git
alias gp='git branch -vv | grep ": gone]" | grep -v "\*" | awk "{ print $1; }" | xargs -r git branch -D'
alias gs='git status'

# Docker
alias dc='docker-compose'

# K8s
alias k='kubectl'
